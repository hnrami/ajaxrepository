const data = [
    { x: 'tes', y: 'hello world ', z: 'abc' },
    { x: 'tes', y: 'world ', z: 'hello ' },
    { x: 'hello ', y: null, z: 'abc' }, // Example with a null value
];

function findFieldContainingValue(data, searchValue) {
    const matchedFields = [];

    const lowerCaseSearchValue = searchValue.toLowerCase();

    data.forEach(item => {
        for (const key in item) {
            if (item.hasOwnProperty(key) && item[key] !== null && item[key].toLowerCase().includes(lowerCaseSearchValue)) {
                matchedFields.push({ [key]: item[key].trim() });
            }
        }
    });

    return matchedFields;
}

const searchValue = 'Hello';
const matchedFields = findFieldContainingValue(data, searchValue);

if (matchedFields.length > 0) {
    console.log(matchedFields);
} else {
    console.log('No match found');
}
